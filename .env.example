# Copy this file to .env and set values as needed

# Kafka UI container name (for docker compose)
KAFKA_UI_CONTAINER_NAME=kafka-ui-app

# Kafka cluster definition (first cluster)
KAFKA_CLUSTERS_0_NAME=cluster-1
KAFKA_CLUSTERS_0_BOOTSTRAPSERVERS=localhost:9092

# Optional: Zookeeper (not required for modern clusters)
# KAFKA_CLUSTERS_0_ZOOKEEPER=localhost:2181

# Optional: Make the UI allow adding clusters at runtime
DYNAMIC_CONFIG_ENABLED=true

# Optional: Read-only mode (disable produce/delete operations)
# KAFKA_CLUSTERS_0_READONLY=true

# Optional: SASL/SSL authentication examples
# KAFKA_CLUSTERS_0_PROPERTIES_SECURITY_PROTOCOL=SASL_SSL
# KAFKA_CLUSTERS_0_PROPERTIES_SASL_MECHANISM=PLAIN
# KAFKA_CLUSTERS_0_PROPERTIES_SASL_JAAS_CONFIG=org.apache.kafka.common.security.plain.PlainLoginModule required username="user" password="pass";

# UI port (container listens here). Railway may set PORT; if so, set SERVER_PORT=$PORT in Railway variables.
SERVER_PORT=8080
